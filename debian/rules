#!/usr/bin/make -f

override_dh_auto_install:
	dh_auto_install

	mkdir -p $(CURDIR)/debian/homegear-mbus/etc/homegear/families
	cp -R $(CURDIR)/misc/Config\ Directory/* $(CURDIR)/debian/homegear-mbus/etc/homegear/families
	chmod 755 $(CURDIR)/debian/homegear-mbus/etc/homegear/families
	chmod 644 $(CURDIR)/debian/homegear-mbus/etc/homegear/families/*

	mkdir -p $(CURDIR)/debian/homegear-mbus/etc/homegear/devices/23
	cp -R $(CURDIR)/misc/Device\ Description\ Files/* $(CURDIR)/debian/homegear-mbus/etc/homegear/devices/23
	chmod 755 $(CURDIR)/debian/homegear-mbus/etc/homegear/devices/23
	chmod 644 $(CURDIR)/debian/homegear-mbus/etc/homegear/devices/23/*

override_dh_strip:
	dh_strip

%:
	dh $@ --parallel
